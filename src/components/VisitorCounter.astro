// Basit bir ziyaretçi sayacı. Sunucu tarafında bir API veya veritabanı ile gerçek sayaç yapılmalıdır.
let count = 0;
---
<script>
(async () => {
  // Basit bir public API ile sayaç (gerçek projede kendi sunucunuzu kullanın)
  // Bu örnekte CountAPI kullanılıyor: https://countapi.xyz/
  const res = await fetch('https://api.countapi.xyz/hit/kayrzex-website/visits');
  const data = await res.json();
  const el = document.getElementById('visitor-count');
  if (el) el.textContent = String(data.value);
})();
</script>

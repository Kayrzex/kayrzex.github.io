---
// Basit bir fotoğraf slider bileşeni. Şimdilik tek görsel var, ileride çoğaltılabilir.
const images = [
    {
        src: "/images/kayra.png",
        alt: "Kayra Fotoğrafı",
    },
];
let current = 0;
function prev() {
    current = (current - 1 + images.length) % images.length;
}
function next() {
    current = (current + 1) % images.length;
}
---

<div
    class="w-full flex flex-col items-center justify-center py-8 relative overflow-hidden"
>
    <video
        class="absolute inset-0 w-full h-full object-cover z-0"
        src="/images/dodge3.mp4"
        autoplay
        loop
        muted
        playsinline></video>
    <div
        class="relative z-10 w-full max-w-lg aspect-[4/5] overflow-hidden rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900"
    >
        <img
            src={images[current].src}
            alt={images[current].alt}
            class="object-cover w-full h-full transition-all duration-500 bg-transparent"
            loading="lazy"
            draggable="false"
        />
        <button
            class="absolute left-2 top-1/2 -translate-y-1/2 bg-white/80 dark:bg-gray-900/80 rounded-full p-2 shadow hover:bg-blue-100 dark:hover:bg-blue-800 focus:outline-none"
            aria-label="Önceki fotoğraf"
            onclick="prev()"
            disabled={images.length === 1}
        >
            <svg
                class="w-6 h-6 text-blue-700 dark:text-blue-300"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 19l-7-7 7-7"></path></svg
            >
        </button>
        <button
            class="absolute right-2 top-1/2 -translate-y-1/2 bg-white/80 dark:bg-gray-900/80 rounded-full p-2 shadow hover:bg-blue-100 dark:hover:bg-blue-800 focus:outline-none"
            aria-label="Sonraki fotoğraf"
            onclick="next()"
            disabled={images.length === 1}
        >
            <svg
                class="w-6 h-6 text-blue-700 dark:text-blue-300"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 5l7 7-7 7"></path></svg
            >
        </button>
    </div>
    <div class="flex gap-2 mt-4 relative z-10">
        {
            images.map((img, i) => (
                <button
                    class={`w-3 h-3 rounded-full ${i === current ? "bg-blue-700 dark:bg-blue-300" : "bg-gray-300 dark:bg-gray-700"}`}
                    aria-label={`Fotoğraf ${i + 1}`}
                    onclick="() => (current = i)"
                />
            ))
        }
    </div>
</div>
